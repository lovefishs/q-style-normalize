{
  "use": [
    "postcss-nested",
    "postcss-cssnext",
    "cssnano"
  ],
  "input": "src/normalize.css",
  "output": "dist/normalize.css",
  "local-plugins": true,
  "watch": false,
  "autoprefixer": {
    "browsers": "last 2 versions"
  },
  "cssnano": {
    "autoprefixer": false,
    "discardComments": {
      "removeAll": true
    }
  }
}
